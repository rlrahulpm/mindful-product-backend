# Database Configuration
DATABASE_URL=jdbc:mysql://localhost:3306/productdb
DATABASE_USERNAME=mindful
DATABASE_PASSWORD=mindful2025
DB_ROOT_PASSWORD=rootpassword
DB_POOL_SIZE=30
DB_POOL_MIN_IDLE=10

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-256-bits
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# Hibernate Configuration
DDL_AUTO=validate
SHOW_SQL=false

# Logging Configuration
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARN
WEB_LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# Cache Configuration
CACHE_MAX_SIZE=5000
CACHE_EXPIRE_AFTER_WRITE=30m
CACHE_EXPIRE_AFTER_ACCESS=15m

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Performance Tuning
JVM_XMS=512m
JVM_XMX=2g

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000